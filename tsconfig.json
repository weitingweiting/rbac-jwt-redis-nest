{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true, // 生成相应的声明文件 (.d.ts)
    "removeComments": true, // 移除注释
    "emitDecoratorMetadata": true, // 启用装饰器元数据
    "experimentalDecorators": true, // 启用实验性的装饰器支持
    "allowSyntheticDefaultImports": true, // 允许从没有默认导出的模块中默认导入
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./", // 基础路径，通常设置为项目根目录
    "incremental": true, // 增量编译以加快后续编译速度
    "skipLibCheck": true, // 跳过库文件的类型检查以加快编译速度
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "noUncheckedIndexedAccess": false,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true, // 允许与ES模块互操作
    "resolveJsonModule": true, // 允许导入JSON模块
    "moduleResolution": "node", // 模块解析策略，使用Node.js的模块解析方式
    "lib": ["ES2022"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  // 这里的排除是指不包含在编译过程中的文件和文件夹
  "exclude": [
    "node_modules",
    "dist",
    "docker-data",
    "docker-data/**",
    "logs",
    "bruno-api-tests",
    "scripts",
    "docs",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
