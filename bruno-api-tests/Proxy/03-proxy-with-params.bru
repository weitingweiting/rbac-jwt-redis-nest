  name: 03-代理请求-带查询参数
  type: http
  seq: 3
}

post {
  url: {{base_url}}/proxy
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token}}
}

body:json {
  {
    "targetUrl": "https://jsonplaceholder.typicode.com/posts",
    "targetMethod": "GET",
    "targetParams": {
      "userId": 1,
      "_limit": 5
    }
  }
}

tests {
  test("状态码应为 200", function() {
    expect(res.status).to.equal(200)
  })
  
  test("应返回数组数据", function() {
    expect(Array.isArray(res.body)).to.be.true
    expect(res.body.length).to.be.at.most(5)
  })
}
