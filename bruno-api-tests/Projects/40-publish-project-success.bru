meta {
  name: 发布项目 - 成功
  type: http
  seq: 40
}

put {
  url: {{projectsBaseUrl}}/2/publish
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "publishUrl": "https://example.com/projects/published"
  }
}

assert {
  res.status: eq 200
}

tests {
  test("发布项目成功", function() {
    expect(res.status).to.equal(200);
    expect(res.body.data).to.have.property('status');
    expect(res.body.data.status).to.equal('published');
    expect(res.body.data).to.have.property('lastPublishedAt');
    expect(res.body.data).to.have.property('publishUrl');
  });
}
