meta {
  name: 创建项目空间 - 成功
  type: http
  seq: 20
}

post {
  url: {{projectSpacesBaseUrl}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "name": "test-space-{{timestamp}}",
    "description": "测试项目空间",
    "isOpen": true
  }
}

assert {
  res.status: eq 201
}

tests {
  test("创建项目空间成功", function() {
    expect(res.status).to.equal(201);
    expect(res.body.data.data).to.have.property('id');
    expect(res.body.data.data).to.have.property('name');
    expect(res.body.data.data).to.have.property('owner');
    
    // 保存项目空间ID供后续测试使用
    bru.setVar("createdSpaceId", res.body.data.id);
  });
}
