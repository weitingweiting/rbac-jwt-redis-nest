meta {
  name: 为角色分配权限
  type: http
  seq: 40
}

put {
  url: {{rolesBaseUrl}}/4/permissions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "permissionIds": [
      1,2,3,4,5,6,7,8,13,14,15,16,17,18,19,20,21
    ]
  }
}

assert {
  res.status: eq 200
}

tests {
  test("分配权限成功", function() {
    console.log( res )
    expect(res.status).to.equal(200);
    expect(res.body.data.data).to.have.property('permissions');
    expect(res.body.data.data.permissions).to.be.an('array');
  });
}
