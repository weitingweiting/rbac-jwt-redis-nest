meta {
  name: 获取用户信息 - 成功
  type: http
  seq: 20
}

get {
  url: {{authBaseUrl}}/profile
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
}

script:pre-request {
  // 验证 token 是否存在
  const token = bru.getVar("token");
  console.log("========== Profile 请求 ==========");
  console.log("使用的 Token:", token ? token.substring(0, 50) + "..." : "❌ Token 不存在");
  console.log("Token 长度:", token?.length);
  console.log("================================");
  
  if (!token) {
    throw new Error("Token 不存在，请先运行登录请求");
  }
}

tests {
  test("获取用户信息成功", function() {
    expect(res.status).to.equal(200);
    expect(res.body.data.user).to.have.property('username');
  });
}
