meta {
  name: 用户注册 - 用户名太短
  type: http
  seq: 2
}

post {
  url: {{authBaseUrl}}/register
  body: json
  auth: none
}

body:json {
  {
    "username": "ab",
    "email": "test@example.com",
    "password": "Test@123456"
  }
}

assert {
  res.status: eq 400
}

tests {
  test("用户名太短验证", function() {
    expect(res.status).to.equal(400);
    expect(res.body.message).to.include('用户名至少需要3个字符');
  });
}