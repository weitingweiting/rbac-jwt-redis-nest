meta {
  name: 用户注册 - 用户名非法字符
  type: http
  seq: 3
}

post {
  url: {{authBaseUrl}}/register
  body: json
  auth: none
}

body:json {
  {
    "username": "test-user",
    "password": "Test@123456"
  }
}

assert {
  res.status: eq 400
}

tests {
  test("用户名非法字符验证", function() {
    expect(res.status).to.equal(400);
    expect(res.body.data.message).to.include('用户名只能包含字母、数字和下划线');
  });
}
