meta {
  name: 完整流程测试 - 从注册到项目发布
  type: http
  seq: 100
}

post {
  url: {{authBaseUrl}}/register
  body: json
  auth: none
}

body:json {
  {
    "username": "flowtest{{timestamp}}",
    "password": "Flowtest123"
  }
}

assert {
  res.status: eq 201
}

tests {
  test("步骤1: 用户注册成功", function() {
    expect(res.status).to.equal(201);
    expect(res.body.data).to.have.property('message');
  });
  
