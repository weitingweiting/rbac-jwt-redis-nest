meta {
  name: 用户注册 - 密码太短
  type: http
  seq: 5
}

post {
  url: {{authBaseUrl}}/register
  body: json
  auth: none
}

body:json {
  {
    "username": "testUser",
    "email": "test@example.com",
    "password": "Test1"
  }
}

assert {
  res.status: eq 400
}

tests {
  test("密码长度验证", function() {
    expect(res.status).to.equal(400);
    expect(res.body.data.message).to.include('密码至少需要6个字符');
  });
}