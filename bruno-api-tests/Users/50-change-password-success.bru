meta {
  name: 修改当前用户密码
  type: http
  seq: 50
}

put {
  url: {{base_url}}/users/change-password
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token}}
}

body:json {
  {
    "oldPassword": "password123",
    "newPassword": "newPassword123"
  }
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response should have success message", function() {
    const body = res.body;
    expect(body.data.message).to.include("密码修改成功");
  });
}
