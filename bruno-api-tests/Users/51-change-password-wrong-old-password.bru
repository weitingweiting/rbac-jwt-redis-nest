meta {
  name: 修改密码-原密码错误
  type: http
  seq: 51
}

put {
  url: {{base_url}}/users/change-password
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token}}
}

body:json {
  {
    "oldPassword": "wrongPassword",
    "newPassword": "newPassword123"
  }
}

tests {
  test("Status code is 401", function() {
    expect(res.status).to.equal(401);
  });
  
  test("Response should have error message", function() {
    const body = res.body;
    expect(body.message).to.include("原密码错误");
  });
}
