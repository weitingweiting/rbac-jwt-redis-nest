meta {
  name: 获取用户列表 - 用户名查询
  type: http
  seq: 2
}

get {
  url: {{usersBaseUrl}}?username=admin
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
}

tests {
  test("按用户名查询成功", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('data');
    if (res.body.data.length > 0) {
      expect(res.body.data[0].username).to.include('admin');
    }
  });
}