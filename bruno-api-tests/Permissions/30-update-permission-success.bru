meta {
  name: 更新权限 - 成功
  type: http
  seq: 30
}

patch {
  url: {{permissionsBaseUrl}}/{{createdPermissionId}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "description": "更新后的权限描述"
  }
}

assert {
  res.status: eq 200
}

tests {
  test("更新权限成功", function() {
    expect(res.status).to.equal(200);
    expect(res.body.data).to.have.property('id');
    expect(res.body.data.description).to.equal("更新后的权限描述");
  });
}
