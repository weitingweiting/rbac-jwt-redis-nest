meta {
  name: 获取组件列表 - 按关键词搜索
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/components?keyword=chart&page=1&limit=10
  body: none
  auth: bearer
}

params:query {
  keyword: chart
  page: 1
  limit: 10
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
}

tests {
  test("搜索组件成功", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.be.an('array');
  });
  
  test("搜索结果包含关键词", function() {
    if (res.body.data.length > 0) {
      const hasKeyword = res.body.data.some(component => 
        component.name.toLowerCase().includes('chart') ||
        component.componentId.toLowerCase().includes('chart') ||
        (component.description && component.description.toLowerCase().includes('chart'))
      );
      // 如果有结果，应该包含关键词
      expect(hasKeyword).to.be.true;
    }
  });
}
