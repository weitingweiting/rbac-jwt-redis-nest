meta {
  name: 获取组件列表 - 按分类筛选
  type: http
  seq: 3
}

get {
  url: {{baseUrl}}/components?classificationLevel1=chart&page=1&limit=10
  body: none
  auth: bearer
}

params:query {
  classificationLevel1: chart
  page: 1
  limit: 10
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
}

tests {
  test("按一级分类筛选成功", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.be.an('array');
  });
  
  test("筛选结果符合分类条件", function() {
    if (res.body.data.length > 0) {
      res.body.data.forEach(component => {
        expect(component.classificationLevel1).to.equal('chart');
      });
    }
  });
}
